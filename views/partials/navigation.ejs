<nav class="navigation">
    <ul class="navigation__list">
      <% if (menuLinks.length > 0) { %>
        <% menuLinks.forEach(link => { %>
          <li class="navigation__item">
            <a
              class="navigation__link <%= activeLinkPath === link.path ? 'navigation__link--active' : '' %>"
              href="<%= link.path %>"
                <% if (link.path === '/kill') { %>
                onclick="return confirm('Are you sure you want to exit the application?');"
                <% } %>
              >
                <%= link.label %>
            </a>
          </li>
        <% }); %>
      <% } %>
    </ul>
  </nav>
  