<html>
  <head>
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <%- include('partials/navigation', { menuLinks, activeLinkPath }); %>
    <main class="layout">

      <aside class="sidebar">
        <h2>Your Lists</h2>
        <ul class="list_menu">
          <li><a href="#">Favourites</a></li>
          <li><a href="#">Read</a></li>
          <li><a href="#">To Be Read</a></li>
        </ul>
        <div id="modalOverlay" class="modal-overlay hidden">
          <div class="modal-window">
            <h2>Create New List</h2>
            <form action="/add-list" method="POST">
              <input type="text" name="name" placeholder="List name" required />
              <div style="margin-top: 1rem;">
                <button class ="button" type="submit" class="button">Create</button>
                <button class ="button" type="button" class="button close-modal">Cancel</button> 
              </div>
            </form>
          </div>
        </div>
        <button class="create_list_btn" id="openModalBtn">+ Create New List</button>
      </aside>

      <section class="content_area">
        <h1 class="heading">Your lists</h1>
        <ul class="book_list">
          <% savedBooks.forEach(book => { %>
          <li class="book_card">
            <div class = "book_image_container">
                <img src="<%= book.thumbnail %>" alt="<%= book.title %> cover" />
                <div class = "book_overlay">
                  <p><%= book.title %></p>
                  <p><%= book.description %></p>
                  <button class ="button" onclick="deleteBook('<%= book.id %>')">Delete</button>
                </div>
            </div>
              <p class="book_title"><%= book.title %></p>
              <p class="book_authors"><%= book.authors %></p>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>
    <script>
      function deleteBook(id) {
        if (!confirm(`Are you sure you want to remove this book from your list?`)) {
          return;
        }

        fetch(`/${id}`, {
          method: "DELETE",
        }).then((response) => {
          if (response.ok) {
            window.location.reload();
          } else {
            alert("Error while removing product.");
          }
        });
      }
    </script>
    <script>
      const modal = document.getElementById('modalOverlay');
      const openBtn = document.getElementById('openModalBtn');
      const closeBtns = document.querySelectorAll('.close-modal');

      openBtn.addEventListener('click', () => {
        modal.classList.remove('hidden');
      });

      closeBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          modal.classList.add('hidden');
        });
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>
