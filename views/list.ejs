<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= list.name %> - Details</title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath:
      activeLinkPath }); %>
    <main class ="layout">
      <aside class="sidebar">
        <h2>Your Lists</h2>
        <ul class="list_menu">
          <% savedLists.forEach(list => { %>
          <li><a href="/lists/<%= list.name %>"><%= list.name %></a></li>
          <% }); %>
        </ul>
        <div id="modalOverlay" class="modal-overlay hidden">
          <div class="modal-window">
            <h2>Create New List</h2>
            <form action="/lists/add" method="POST">
              <input type="text" name="name" placeholder="List name" required />
              <div style="margin-top: 1rem;">
                <button class ="button" type="submit" class="button">Create</button>
                <button class ="button" type="button" class="button close-modal">Cancel</button> 
              </div>
            </form>
          </div>
        </div>
        <button class="create_list_btn" id="openModalBtn">+ Create New List</button>
      </aside>

      <section class="content_area">
        <h1 class="heading"><%= list.name %></h1>
        <ul class="book_list">
          <% savedBooks.forEach(book => { %>
          <li class="book_card">
            <div class = "book_image_container">
                <img src="<%= book.thumbnail %>" alt="<%= book.title %> cover" />
                <div class = "book_overlay">
                  <p><%= book.title %></p>
                  <p><%= book.description %></p>
                  <form action="/lists/<%= list.name %>/delete-book/<%= book.id %>?_method=DELETE" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button class="button" type="submit">Delete</button>
                  </form>
                    
                </div>
            </div>
              <p class="book_title"><%= book.title %></p>
              <p class="book_authors"><%= book.authors %></p>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>

    <script>
      const modal = document.getElementById('modalOverlay');
      const openBtn = document.getElementById('openModalBtn');
      const closeBtns = document.querySelectorAll('.close-modal');

      openBtn.addEventListener('click', () => {
        modal.classList.remove('hidden');
      });

      closeBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          modal.classList.add('hidden');
        });
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>
